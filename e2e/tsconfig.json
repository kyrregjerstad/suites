{
  "compilerOptions": {
    "module": "es2022",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "incremental": false,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es2015.reflect"]
  },
  "exclude": ["node_modules"]
}

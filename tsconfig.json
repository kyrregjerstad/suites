{
  "compilerOptions": {
    "module": "es2022",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "incremental": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "lib": ["es6"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@suites/*": [
        "packages/*/src"
      ]
    }
  },
  "exclude": [
    "e2e",
    "index.ts",
    "node_modules",
    "dist",
    "__test__",
    "env",
    "coverage"
  ]
}
